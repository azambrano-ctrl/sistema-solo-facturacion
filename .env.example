# ============================================
# CONFIGURACIÓN DEL SISTEMA DE FACTURACIÓN SRI
# ============================================

# Ambiente SRI
# 1 = Pruebas
# 2 = Producción
VITE_SRI_ENVIRONMENT=1

# ============================================
# INTEGRACIÓN CON SISTEMA HOTELERO
# ============================================

# URL del backend del sistema hotelero
# Ejemplo: https://troncalinn-backend.onrender.com/api
VITE_HOTEL_API_URL=http://localhost:3000/api

# API Key para autenticación con el sistema hotelero
VITE_HOTEL_API_KEY=your-api-key-here

# Habilitar integración con sistema hotelero
VITE_HOTEL_INTEGRATION_ENABLED=true

# Generar factura automáticamente al recibir checkout
VITE_AUTO_GENERATE_INVOICE=true

# Enviar email automático al huésped con la factura
VITE_SEND_EMAIL_TO_GUEST=true

# Método de pago por defecto
# 01 = Efectivo
# 20 = Otros con utilización del sistema financiero
VITE_DEFAULT_PAYMENT_METHOD=20
